<!-- Modal za signup -->
<div id="signUpModal" class="modal fade" role="dialog" >
 <!-- velicina modala-->
 <div class="modal-dialog modal-md">
<!-- Sadrzaj Modala -->
  <div class="modal-content">
 <!--Zaglavlje-->
 <!--Xic za zatvaranje-->
   <div class="modal-header" >
    <button type="button" class="close" data-dismiss="modal">&times;</button>
     <label>REGISTRATION</label>    
   </div>
 <!--Tijelo -->
   <div class="modal-body">
    <div class="row">
    <!--forma-->
     <form role="form">       
        <!--first name-->      
      <div class="form-group" class="col-md-6">
       <label >First name</label>
       {{input type="text" class="form-control invalidBorder1" value=firstName placeholder="First name"}} 
      </div>

        <!--last name--> 
      <div class="form-group" class="col-md-6"> 
       <label >Last name</label> 
        {{input type="text" class="form-control invalidBorder2" value=lastName placeholder="Last name"}}
      </div><br>

        <!--email-->
      <div class="form-group" class="col-md-12">
       <label >Email</label>
        {{input type="email" class="form-control invalidBorder9" value=emailReg placeholder="Email"}}
      </div>
      
      
      <div class="form-group" class="col-md-8">
       <label >Phone</label>
        {{input type="tel" class="form-control invalidBorder4" value=tel placeholder="Phone"}}
      </div>

        <!--pass-->
      <div class="form-group" class="col-md-12">
       <label >Password</label>
       {{input type="password" class="form-control invalidBorder8" value=pwdReg placeholder="Password"}}
        <p class="pass-paragraph" id="passParagraph"></p>
      </div>

        <!--passConfirmation-->  
      <div class="form-group" class="col-md-12">
       <label >Password confirmation</label>
        {{input type="password" class="form-control invalidBorder7" value=pwdConfirmation placeholder="Password confirmation"}}
         <p class="conf-paragraph" id="confParagraph"></p> 
      </div>
        
        <!--city-->        
      <div class="form-group" class="col-md-6">
       <label >City</label>
       {{input type="text" class="form-control invalidBorder6" value=city placeholder="City"}}
      </div>

        <!--country-->
      <div class="form-group" class="col-md-6">
       <label >Country</label>
        {{input  type="text" class="form-control invalidBorder5" value=country placeholder="Country"}}
      </div>
      
      
      <div class="form-group" class="col-md-8">
       <label >Street name</label>
       {{input  type="text" class="form-control invalidBorder3" value=streetName placeholder="Street name"}}
      </div>

      <div class="form-group" class="col-md-8">
       <label>Gender</label>
        <input type="radio" name="gender" value="Male" checked> Male
         <input type="radio" name="gender" value="Female"> Female 
      </div>
 
    
    {{birthday-component title="Birthday:" day=(mut day) month=(mut month) year=(mut year)}}

        
    
    <div  class="col-md-8">
     <p class="empty-paragraph" id="emptyParagraph"></p>
      <p class="invalid-paragraph" id="invalidParagraph"></p>
    </div>

    </form> 

   </div>
  </div>   
 
        <!--footer-->
  <div class="modal-footer" >
        <!--white space-->         
   <div class="col-md-12">           
    <a href="#" class="btn btn-success btn-block" id="createButton" {{action 'onRegister'}}>Create account</a>
   </div>
  </div>
 </div>
</div>
</div>

{{yield}}